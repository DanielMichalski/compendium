    sameLine(" Ten tekst jest w tym samym wierszu.", g);
    sameLine(" Ten tak¿e.", g);
    nextLine("To jest trzeci wiersz.", g);
    curX = curY = 0; // Zeruje wspó³rzêdne w ka¿dej operacji rysowania.
  }

  // Przechodzi do nastêpnego wiersza.
  void nextLine(String s, Graphics g) {
    FontMetrics fm = g.getFontMetrics();

    curY += fm.getHeight(); // przejœcie do nastêpnego wiersza
    curX = 0;
    g.drawString(s, curX, curY);
    curX = fm.stringWidth(s); // przejœcie na koniec wiersza
  }

  // Wyœwietla tekst w tym samym wierszu.
  void sameLine(String s, Graphics g) {
    FontMetrics fm = g.getFontMetrics();

    g.drawString(s, curX, curY);
    curX += fm.stringWidth(s); // przejœcie na koniec wiersza
  }
}

