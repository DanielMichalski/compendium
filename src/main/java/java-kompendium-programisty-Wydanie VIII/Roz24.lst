*/

public class MultiLine extends Applet {
  int curX=0, curY=0; // bie¿¹ca pozycja

  public void init() {
    Font f = new Font("SansSerif", Font.PLAIN, 12);
    setFont(f);
  }

  public void paint(Graphics g) {
